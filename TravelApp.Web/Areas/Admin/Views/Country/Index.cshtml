@model IEnumerable<TravelApp.Contracts.DTO.CountryDto>

@{
    ViewBag.Title = "Index";
}

<h2>Strona główna panelu państw</h2>

<p>
    @Html.ActionLink("Stwórz nowy kraj", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

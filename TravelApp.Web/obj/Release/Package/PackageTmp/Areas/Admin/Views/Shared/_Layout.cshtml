<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PlanATrip</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-brand">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.RouteLink("Użytkownicy", "Admin_default", new { action = "Index", controller = "User" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Atrakcja", "Index", "Attraction")</li>
                    <li>@Html.ActionLink("Miasto", "Index", "City")</li>
                    <li>@Html.ActionLink("Kraj", "Index", "Country")</li>
                    <li>@Html.ActionLink("Blogi", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Uprawnienia", "Index", "Role")</li>
                    <li>@Html.ActionLink("Plan podróży", "Index", "TripPlan")</li>
                    <li>@Html.ActionLink("Użytkownicy", "Index", "User")</li>
                    </ul>
                @Html.Partial("_LoginPartial")
            </div><!--/.nav-collapse -->
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()

        <!-- *****************************************************************************************************************
        TESTIMONIALS
        ***************************************************************************************************************** -->    
        <hr />
        <!-- *****************************************************************************************************************
         FOOTER
         ***************************************************************************************************************** -->
        <div id="footerwrap">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <h4>Social Links</h4>
                        <div class="hline-w"></div>                   
                    </div>                   
                </div><! --/row -->
            </div><! --/container -->
        </div><! --/footerwrap -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@model TravelApp.Contracts.DTO.CityDto
@{
    ViewBag.Title = "Nowe misto";
}

<h2>Nowe miasto</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>
        Nazwa miasta
    </div>
    <p>
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </p>
    <div>
        Nazwa kraju
    </div>
     <p>
        @Html.DropDownList("Country",null, "Wybierz ...", new { @class = "form-control" })
    </p>
    <input type="submit" value="Zapisz" class="form-control" />
}

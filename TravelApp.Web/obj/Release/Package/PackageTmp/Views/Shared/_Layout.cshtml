<!DOCTYPE html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Plan A Trip</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar-default, #footerwrap {
            background-color: cadetblue;
        }

            #footerwrap p {
                color: white;
            }
    </style>
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#sufix">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TravelApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div id="sufix" class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Zaplanuj przygode", "Index", "TripPlan")</li>
                    <li>@Html.ActionLink("Atrakcje", "Index", "Attraction")</li>
                    <li>@Html.ActionLink("Artykuły", "Index", "Blog")</li>
                    <li>@Html.ActionLink("Ulubione", "Index", "Favourite")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div><!--/.nav-collapse -->
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <!-- *****************************************************************************************************************
        TESTIMONIALS
        ***************************************************************************************************************** -->

        <hr />
        <!-- *****************************************************************************************************************
         FOOTER
         ***************************************************************************************************************** -->
        <div id="footerwrap" style="padding-top:10px;padding-bottom:5px; color:white;">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="hline-w"></div>
                        <p style="padding-top:0px;padding-bottom:0px;">
                            Strona została wykonana przez Michała Szuma i korzysta z darmowego szablonu bootstrap o nazwie Solid
                            <a href="#"><i class="fa fa-dribbble"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-tumblr"></i></a>
                        </p>
                    </div>
                </div><! --/row -->
            </div><! --/container -->
        </div><! --/footerwrap -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")


@model IEnumerable<TravelApp.Entities.Model.UserInfo>
@{
    ViewBag.Title = "Panel Użytkowników";
}
<div class="spacing"></div>
<h2>Panel zarządzania użytkownikami</h2>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th>Data urodzenia</th>
                <th>Blokada konta</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.LastName</td>
                <td>@item.ApplicationUser.Email</td>
                <td>@item.BirthDate.ToShortDateString()</td>
                <td>@item.ApplicationUser.LockoutEnabled</td>
                <td>@Html.ActionLink("Zablokuj", "BlockUser", new { id = item.Id }) | @Html.ActionLink("Odblokuj", "UnblockUser", new { id = item.Id }) | @Html.ActionLink("Edytuj", "Edit", new { id = item.Id }) | @Html.ActionLink("Usuń", "Delete")</td>
        </tr>
        }
    </table>


</div>